<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_back"
    android:orientation="horizontal"
    tools:context="com.ezviz.open.view.avctivity.MainActivity">

    <com.ezviz.open.view.widget.Topbar
        android:id="@+id/modify_name_topbar"
        xmlns:topbar="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        android:background="@color/color_white"
        topbar:leftIcon="@drawable/btn_return"
        topbar:textColor="@color/topbar_title_color">
    </com.ezviz.open.view.widget.Topbar>

    <EditText
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:background="@color/color_white"
        android:paddingLeft="10dp"
        android:maxLines="1"
        android:maxLength="50"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:textColor="@color/topbar_title_color"
        android:layout_below="@+id/modify_name_topbar"
        android:layout_height="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"
        android:layout_below="@+id/text_name"
        android:layout_marginTop="5dp"
        android:text="@string/device_name_length_limit"
        android:textColor="@color/message_type_color"
        android:layout_height="wrap_content"/>

</RelativeLayout>
